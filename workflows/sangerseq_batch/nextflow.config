process {
    withName: SANGERSEQ_ANALYSER {
        container = "kzhupm/python3-r:1.0.0"
        containerOptions = "-v ${params.output_dir}:/mnt"
        cpus = 4
        memory = 16.GB
        publishDir = [
            path: { "${params.output_dir}" },
            mode: params.publish_dir_mode,
            pattern: "*.{txt,csv,pdf,fa,yml}",
            saveAs: { "${sample}/${it}" }
        ]
    }
}